<div class='chat'>
  <div class='chat__list'>
    {{{link}}}
    {{{inputSearch}}}
    <div class='chat__users'>
        <div class='chat__new'>
            {{{inputCreateChat}}}
            {{{buttonCreateChat}}}
        </div>
        <div class='chat__new'>
            {{{buttonAddUserToChat}}}

            {{{buttonDeleteUserFromChat}}}
        </div>
      {{{user}}}
    </div>
  </div>
  <div class='chat__feed'>
    {{{chatHeader}}}
    <div class='chat__body'>
        {{{messages}}}
      <!--            // добавить признак выбранного чата-->
      {{#if messages}}

      {{else}}
        <h3 class='chat__warning'>
          Выберите чат, чтобы отправить сообщение
        </h3>
      {{/if}}
    </div>
    <footer class='chat__footer'>
      {{{buttonClip}}}

      <form id='form_message' class='chat__form' novalidate>
        {{{inputMessage}}}
        {{{buttonMessage}}}
      </form>
    </footer>
  </div>
</div>
