{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020", "scripthost", "es2015.proxy"],
    "outDir": "static/build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "module": "ES2015"
  },
  "plugins": [
    {
      "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
      "after": true
    }
  ],
  "noImplicitAny": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "alwaysStrict": true,
  "sourceMap": true,
  "strictNullChecks": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
